<% layout("/layouts/boilerPlate")%>
<%=failure%>
<%=success%>
    <br>
    <div class="row col-6 offset-2">
        <div class="signup-container mt-3 offset-3 shadow-lg container">
            <h2>Sign Up</h2>
            <!-- signup form -->
            <form action="/user/signup" method="POST" class="needs-validation" novalidate>
                <!-- username -->
                <div class="input-group">
                    <input type="text" id="name" name="user[username]" placeholder="Enter your name" required
                        class="form-control">
                </div>
                <div class="invalid-feedback">
                    Please choose a username.
                </div>
                <!-- email address -->
                <div class="input-group">
                    <input type="email" id="email" name="user[email]" placeholder="Enter your email" required
                        class="form-control">
                </div>
                <div class="invalid-feedback">
                    Please enter email.
                </div>
                <!-- password -->
                <div class="input-group">
                    <input type="password" id="password" name="user[password]" placeholder="Enter your password"
                        required class="form-control" min="8">
                </div>
                <div class="invalid-feedback">
                    Please enter password.
                </div>
                <!-- submit button -->
                <button type="submit" class="btn btn-outline-dark">Sign Up</button><br>
                <div>
                    <p>already have an account? <a href="/user/login">login</a></p>
                </div>
            </form>
        </div>
    </div>
    <!-- css applied here -->
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }


        /* Signup Form Container */
        .signup-container {
            margin-top: 6% !important;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            text-align: center;
        }

        /* Form Title */
        .signup-container h2 {
            margin-bottom: 20px;
            color: #333;
        }

        /* Input Groups */
        .input-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .input-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
            color: #333;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        /* Submit Button */
        button {
            width: 100%;
            padding: 10px;
            background-color: black;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background-color: #333;
        }
    </style>